{
  "name": "diffable-html-snapshot",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.28.2",
  "description": "Making HTML diffs readable for tests",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/diffable-html-snapshot#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/diffable-html-snapshot.git"
  },
  "bugs": "https://github.com/ocavue/diffable-html-snapshot/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./snapshot-serializer": {
      "import": "./dist/snapshot-serializer.js",
      "require": "./dist/snapshot-serializer.cjs",
      "default": "./dist/snapshot-serializer.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "test": "pnpm run build && pnpm run test:src && pnpm run test:e2e",
    "test:src": "vitest run ./src",
    "test:e2e": "pnpm --filter 'e2e-*' --sequential test",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "htmlparser2": "^10.1.0"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.10.0",
    "@ocavue/tsconfig": "^0.6.2",
    "@types/node": "^20.19.10",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
